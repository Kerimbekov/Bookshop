@model Book

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
       
        <div class="caption">
            <h3 class="pull-right">@Model.Author</h3>
            <h3>
                <a>@Model.Name</a>
            </h3>
            <p>@Model.Pages pages</p>
            
        </div>
        <div class="addToCart text-right">
            <p class="button ">
                <a class="btn btn-success" id="cartButton"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-bookId="@Model.BookId">
                    In stock: @Model.InStock
                </a>
            </p>
        </div>
    </div>
</div>
